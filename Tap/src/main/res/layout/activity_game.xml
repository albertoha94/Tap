        android:layout_alignParentEnd="true"
        android:textSize="@dimen/b_pause_textsize"
        android:layout_margin="@dimen/b_game_margin"
        android:background="@drawable/buttonstandard" />

    <TextView
        android:gravity="center"
        android:visibility="gone"
        android:id="@+id/tv_readyup"
        android:textSize="@dimen/tv_readyup_textsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
