<RelativeLayout
    tools:context=".A_Game"
    android:id="@+id/ReLa_Main"
    tools:ignore="MergeRootFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:text="0"
        style="?attr/TextGame"
        tools:ignore="HardcodedText"
        android:id="@+id/tv_timer"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:drawableStart="@drawable/ic_clock"
        android:textSize="@dimen/tv_score_timer_textsize" />

    <TextView
        android:text="0"
        android:id="@+id/tv_score"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_timer"
        android:layout_alignStart="@+id/tv_timer"
        android:textSize="@dimen/tv_score_timer_textsize" />

    <View
        android:id="@+id/v_separator"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_below="@+id/tv_score"
        android:layout_height="@dimen/v_height"
        android:layout_marginTop="@dimen/v_margintop_bottom"
        android:layout_marginBottom="@dimen/v_margintop_bottom" />

    <View
        android:id="@+id/v_fill"
        android:background="@color/ao"
        android:layout_width="match_parent"
        android:layout_below="@+id/tv_score"
        android:layout_height="@dimen/v_height"
        android:layout_marginTop="@dimen/v_margintop_bottom"
        android:layout_marginBottom="@dimen/v_margintop_bottom" />

